.post-header
  .pull-left.post-title
    h2 Vitaje na stránke venovanej Dornovej metóde
.post-wrap.displayps
  article.post.page
    section.post-content
      .row
        .col-md-12
          section#photostack-3.photostack
            div
              - @figures.select { |figure| figure.visibility}.each do |figure|
                  = render partial: "home/ps_figures", locals: { figure: figure }
      .row
        .col-md-12
          h3 Najnovšie články
      .row
        #portfolio-content data-cols="4"
          - @posts.each do |post|
            = render partial: "home/post_latest", locals: { post: post }
